[user]
	name = Zak Johnson
	email = me@zakj.net

[alias]
	ci = commit -v
	co = checkout
	d = diff
	dc = diff --cached
	lg = log --graph --pretty=graph
	out = log --pretty=graph @{upstream}..
	st = status --branch --short
	unstage = reset HEAD --

[core]
	autocrlf = input
	pager = less -FSX
	safecrlf = true

[init]
	defaultBranch = main

[pretty]
	graph = %C(yellow)%h%Creset %s%d %C(brightblack)%an %ar

[pull]
	ff = only

[rebase]
	autosquash = true

[branch]
	autosetuprebase = always

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
