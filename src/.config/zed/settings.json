// https://zed.dev/docs/configuring-zed â€¢ `zed: open default settings`
{
  "theme": "Mourning",
  "telemetry": { "metrics": false },
  "vim_mode": true,
  "cursor_blink": false,
  "buffer_font_size": 13,
  "indent_guides": { "enabled": false },
  "current_line_highlight": "gutter",

  // Disable various bottom-bar and side-bar cruft.
  "assistant": { "version": "2", "enabled": false },
  "chat_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "features": { "inline_completion_provider": "none" },

  "git": {
    "inline_blame": { "enabled": false, "delay_ms": 1000 }
  },

  "terminal": {
    "blinking": "off",
    "font_family": "Menlo",
    "line_height": "standard",
    "env": { "EDITOR": "zed --wait" }
  },

  "languages": {
    "Git Commit": { "wrap_guides": [72] },
    "Lua": { "tab_size": 2 },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  }
}
