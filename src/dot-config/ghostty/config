mouse-hide-while-typing = true
# default is 5 lines, we want 1
mouse-scroll-multiplier = 0.2
quit-after-last-window-closed = true
# Ghostty forces a blinking bar cursor with cursor integration on, even with
# `cursor-style-blink = false`.
# See <https://github.com/ghostty-org/ghostty/discussions/2812>
shell-integration-features = no-cursor

# Zellij
keybind = cmd+shift+left_bracket=unbind
keybind = cmd+shift+right_bracket=unbind
keybind = cmd+left_bracket=unbind
keybind = cmd+right_bracket=unbind
keybind = cmd+t=unbind

# F19 is emitted by Hammerspoon on hyper-`.
keybind = f19=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-animation-duration = 0

