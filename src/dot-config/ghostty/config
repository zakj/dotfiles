keybind = super+ctrl+up=resize_split:up,18
keybind = super+shift+ctrl+down=resize_split:down,90
keybind = super+shift+ctrl+up=resize_split:up,90

# F19 is emitted by Hammerspoon on hyper-`.
keybind = f19=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-animation-duration = 0

