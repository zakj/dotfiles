{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
  },
  "editor.cursorBlinking": "solid",
  "editor.formatOnSave": true,
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.renderLineHighlight": "none",
  "editor.tabSize": 2,
  "emmet.showExpandedAbbreviation": "never",
  "explorer.confirmDelete": false,
  "files.insertFinalNewline": true,

  "git.autofetch": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,

  "html.format.extraLiners": "",
  "html.format.wrapLineLength": 80,

  "languageStylus.useSeparator": false,

  "python.venvPath": "~/.virtualenvs",

  "svelte.enable-ts-plugin": true,

  // TODO: move into theme?
  "workbench.colorCustomizations": {
    "editorBracketMatch.background": "#333",
    "editorBracketMatch.border": "#00000000",
    "editorIndentGuide.activeBackground": "#ffffff22",
    "editorIndentGuide.background": "#00000000",
  },
  "workbench.colorTheme": "Mourning",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "vim.leader": ",",
  "vim.searchHighlightColor": "#afff5f",
  "vim.showmodename": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-h>"],
      "after": [],
      "commands": [{
        "command": ":set hlsearch!",
        "args": [],
      }],
    },
    {
      "before": ["g", "r"],
      "after": [],
      "commands": ["editor.action.rename"],
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "s"],
      "after": [],
      "commands": [{
        "command": "editor.action.sortLinesAscending",
        "args": [],
      }, {
        // exit visual mode
        "command": "extension.vim_escape",
        "args": [],
      }],
    },
  ],

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[markdown]": {
    "editor.fontSize": 16,
    "editor.lineNumbers": "off",
    "editor.quickSuggestions": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 76,
    "editor.wrappingIndent": "indent",
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
}
